<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp"
    android:layout_marginTop="5dp"
    android:background="#ffffff"
    android:elevation="12dp"
    >

    <ImageView
        android:id="@+id/userImageComment"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="12dp"
        tools:src="@drawable/placeholder2"
        android:contentDescription="null" />
    <TextView
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserName"
        app:layout_constraintStart_toEndOf="@id/userImageComment"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/userImageComment"
        android:layout_marginStart="12sp"
        android:gravity="center"
        android:layout_marginBottom="12dp"
        />
    <TextView
        android:id="@+id/commentedAt"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12h"
        app:layout_constraintStart_toEndOf="@id/userName"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@id/userImageComment"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="12dp"
        />

    <TextView
        android:id="@+id/comment"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bada sa comment"
        app:layout_constraintTop_toBottomOf="@id/userImageComment"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>